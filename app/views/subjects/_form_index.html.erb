<div id="show_data" class="span10">
  <h2 class="demoHeaders">Subjects</h2>
  <table width="100%" class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Index</th>
        <th>Subject Name</th>
        <th>No Of chapters</th>
	<th>Edit</th>
        <th>Destroy</th>
      </tr>
    </thead>
    <%- @subjects.each_with_index do |subject, index|%>
      <tr>
	<td><%= "#{index + 1}" %></td>
	<td><a href="#"><%= subject.name %></a></td>
	<td><%= link_to "chapters", subject_chapters_path(subject), :method => :get, :remote => true %></td>
	<td><%= link_to "Edit", edit_subject_path(subject), :method => :get, :remote => true %></td>
	<td><%= link_to "Delete", subject_path(subject), :method => :delete, :remote => true, :confirm => "Are you sure?" %></td>
      </tr>
    <%- end %>
  </table>
  <%- if current_user.role.name == "Admin" %>
    <div class="span3 summary_contain">
      <%= link_to "Add Subject", new_subject_path, :class => "btn btn-primary btn-large", :remote => true %>
    </div>
  <% end %>
</div>
