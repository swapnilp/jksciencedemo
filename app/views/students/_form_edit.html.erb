<div id="show_data" class="span10">
  <%= form_for @student, :url => student_path(@student), :method => :put, :remote => true,  :html => { :class => "form-horizontal", :id => "edit_student" } do |f| %>
  <%- if @student.errors.any? %>
  <%- @student.errors.full_messages.each do |msg|%>
  <%= "#{msg}" %><br />
  <% end %>
  <% end %>
  <table width="100%" class="table">
    <tr>
      <td width="20%">Name</td>
      <td><%= f.text_field :name, :class => 'input-large'%></td>
    </tr>
    <tr>
      <td>Email</td>
      <td><%= @student.email %></td>
    </tr>
    <tr>
      <td>Address</td>
      <td><%= f.text_field :address, :class => 'input-large' %></td>
    </tr>
    <tr>
      <td>Phone Number</td>
      <td><%= f.text_field :phone_number %></td>
    </tr>
    <tr>
      <td>Group</td>
      <td><%= f.text_field :group %></td>
    </tr>
    <tr>
      <td>Standered</td>
      <td><%= f.text_field :standerd %></td>
    </tr>
    <tr>
      <td>SSC Marks</td>
      <td><%= f.text_field :ssc_marks %></td>
    </tr>
    <tr>
      <td>Parent Contact</td>
      <td><%= f.text_field :parent_contact %></td>
    </tr>
  </table>
  <%= f.submit "update", :class => 'btn btn-large' %>
  
  <%= link_to "Back", student_path(@student), :class => "btn btn-large", :id => "edit_back_#{@student.id}", :remote => true %>
  <% end %>
</div>
