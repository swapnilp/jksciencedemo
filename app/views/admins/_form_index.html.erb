<div id="show_data" class="span10">
  <h2 class="demoHeaders">Admins</h2>

  <table width="100%" class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Index</th>
        <th>Name</th>
        <th>Destroy</th>
      </tr>
    </thead>
    <%- @admins.each_with_index do |admin, index|%>
    <tr>
      <td><%= "#{index + 1}" %></td>
      <td><%= link_to "#{admin.name}", admin_path(admin), :method => :get, :remote => true %></td>
      <td><%= link_to "Delete", admin_path(admin), :method => :delete, :remote => true, :confirm => "Are you sure?" %></td>
    </tr>
    
    <%- end %>
  </table>
  <div class="span3 summary_contain">
    <%= link_to "Add Admin", new_admin_path, :class => "btn btn-primary btn-large", :remote => true %>
  </div>
</div>
