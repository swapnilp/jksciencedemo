<div id="show_data" class="span10">
  <h2>Users</h2>
  <table width="100%" class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
	<th>Index</th>
	<th>Name</th>
	<th>Role</th>	
	<th>Destroy</th>
      </tr>
    </thead>
      <% @users.each_with_index do |user, index| %>
      <tr>
	<td><%= "#{index + 1}" %></td>
	<td><%= "#{user.email}" %></td>
	<td><%= "#{user.role.name}" %></td>
	<td><%= link_to 'remove', user_path(user), :method => :delete, :remote => :true, confirm: 'Are you sure?' %></td>
      </tr>
      <% end %>
  </table>

  <div>
    <%= link_to 'Add User', new_user_path, :remote => :true, :class => 'btn btn-primary' %>
  </div>
  
</div>
