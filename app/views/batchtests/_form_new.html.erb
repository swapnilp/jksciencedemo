<script>
  $(function() {
  $( "#start_test_date" ).datepicker({minDate: 0, maxDate: "+8M", dateFormat : "dd/mm/yy"});
  $( "#end_test_date" ).datepicker({ minDate: 0, maxDate: "+8M", dateFormat : "dd/mm/yy" });
  });
</script>

<div id="model_new">
  <%= form_for @batchtest, :url => batch_batchtests_path(@batch_id, @batchtest) , :method => :post, :remote => :true do |f| %>
  <%- if @batchtest.errors.any? %>
  <%- @batchtest.errors.full_messages.each do |msg| %>
  <%= "#{msg}" %><br />
  <% end %>
  <% end %>
  <span class="row"><label>Test Name
      <%= f.select "jktest_id", options_from_collection_for_select(@jktests, "id", "name"), :selected => @batchtest.jktest_id %>
</lable>
</span>

<span class="row"><label class="control-label">Start Test Date (YY/m/d)
    <%= f.text_field :start_test_date, :class => 'input-large', :id => 'start_test_date'%>
</lable>

<span class="row"><label class="control-label">End Test Date (YY/m/d)
    <%= f.text_field :end_test_date, :class => 'input-large', :id => 'end_test_date'%>
</lable>
</span>

<span class="row"><label class="control-label">Attempts
    <%= f.text_field :attempt, :class => 'input-large' %>
</lable>
</span>

<%= f.submit "Save", :class => 'btn' %>
<%- end %>
</div>
