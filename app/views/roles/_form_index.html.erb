<div id="show_data" class="span10">
  <h2 class="demoHeaders">Roles</h2>
  <table width="100%" class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Index</th>
        <th>Role</th>
        <th>Edit</th>
        <th>Destroy</th>
      </tr>
    </thead>
    
    <%- @role.each_with_index do |role, index|%>
    <tr>
      <td><%= "#{index + 1}" %></td>
      <td><%= "#{role.name}" %></td>
      <td><%= link_to "Edit", edit_role_path(role), :remote => true %></td>
      <td><%= link_to "Delete", role_path(role), :method => :delete, :remote => true, :confirm => "Are you sure?" %></td>
      <%- end %>
  </table>
  <div class="span3 summary_contain">
    <%= link_to "Add Role", new_role_path, :class => "btn btn-primary btn-large", :remote => true %>
  </div>
</div>
