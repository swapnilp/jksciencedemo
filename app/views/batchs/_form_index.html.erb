<div id="show_data" class="span10">
  <h2 class="demoHeaders">Batchs</h2>
  <table width="100%" class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Index</th>
        <th>Batch Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Batch Student</th>
        <th>Batch Tests</th>
	<th>Edit</th>
	<th>Remove</th>
      </tr>
    </thead>
    <%- @batchs.each_with_index do |batch, index|%>
    <tr>
      <td><%= "#{index + 1}" %></td>
      <td><%= link_to "#{batch.description}", batch_path(batch), :remote => :true %></td>
      <td><%= "#{batch.start_date}" %></td>
      <td><%= "#{batch.end_date}" %></td>
      <td><%= link_to 'Batch Student', batch_batchstudents_path(batch), :remote => true%></td>
      <td><%= link_to 'Batch Test', batch_batchtests_path(batch), :remote => true%></td>
      <td><%= link_to "Edit", edit_batch_path(batch), :remote => true %></td>
      <td><%= link_to "Delete", batch_path(batch), :method => :delete, :remote => true, :confirm => "Are you sure?" %></td>
    </tr>
    <%- end %>
  </table>
  
  <div class="span3 summary_contain">
    <%= link_to "Add Batch", new_batch_path, :class => "btn btn-primary btn-large", :remote => true %>
  </div>
</div>
