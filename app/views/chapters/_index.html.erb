<div id="show_data" class="span10">
  <h2>Chapters</h2>
  <table width="100%" class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Index</th>
        <th>Chapter Name</th>
	<th>Topics</th>
        <th>Edit</th>
        <th>Destroy</th>
      </tr>
    </thead>
    <%- @chapters.each do |chapter| %>
    <tr>
      <td><%= chapter.chapter_number %></td>
      <td><%= chapter.name %></td>
      <td><%= link_to 'Topics', subject_chapter_path(@subject_id, chapter), :remote => true%></td>
      <%- if current_user.role.name == "Admin" %>
      <td><%= link_to 'Edit', edit_subject_chapter_path(@subject_id, chapter), :remote => true %></td>
      <td><%= link_to 'Delete', subject_chapter_path(@subject_id, chapter), confirm: 'Are you sure?', method: :delete, :remote => true %></td>
      <% end %>
    </tr>      
    <% end %>
  </table>
  <div class="span3 summary_contain" width="100%">
    <%- if current_user.role.name == "Admin"  %>  
    <%= link_to "Add Chapter", new_subject_chapter_path(@subject_id), :class => 'btn btn-primary btn-large', :remote => true %>
    <% end %>
    <%= link_to "Back", subjects_path, :class => 'btn btn-primary btn-large', :remote => true %>
  </div>
</div>
